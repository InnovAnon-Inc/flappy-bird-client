{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "member-variable-declaration",
            "property-declaration"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "no-namespace": [
            true, 
            "allow-declarations"
        ]
    }
}